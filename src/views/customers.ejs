<%- include("partials/_header") %>

<div class="container mt-5">

  <div class="col-md-5"  >
      <div class="card-body mb-5">
        <form action="/add" method="POST">
       
          <input
          type="text"
          name="rut"
          placeholder="rut 18822185-8"
          class="form-control mb-2"
        />
        <input
        type="text"
        name="name"
        placeholder="Name"
        class="form-control mb-2"
        autofocus
      />
      <input
      type="text"
      name="ap_paterno"
      placeholder="Paterno"
      class="form-control mb-2"
      autofocus
    />
    <input
    type="text"
    name="ap_materno"
    placeholder="Materno"
    class="form-control mb-2"
    autofocus
  />
  <input
  type="text"
  name="direccion"
  placeholder="direccion"
  class="form-control mb-2"
/>
          <input
            type="email"
            name="address"
            placeholder="Correo"
            class="form-control mb-2"
          />
          <input
            type="number"
            name="phone"
            placeholder="Phone"
            class="form-control mb-2"
          />
          <input
          type="text"
          name="contrasenia"
          placeholder="Contraseña"
          class="form-control mb-2"
        />
          <input
          type="number"
          name="blocked"
          placeholder="blocked 1/0"
          class="form-control mb-2"
        />
        <input
        type="text"
        name="typeAccount"
        placeholder="web/movil"
        class="form-control mb-2"
      />

          <button type="submit" class="btn btn-info">Crear Cuenta</button>
        </form>
      </div>


  <div class="row">
    <div class="col-md-9">
      <table class="table table-yellow table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>rut</td>
            <td>Nombres</td>
            <td>Paterno</td>
            <td>Materno</td>
            <td>Direccion</td>
            <td>Correo</td>
            <td>contraseña</td>
            <td>Phone</td>
            <td>Blocked</td>
            <td>Web/Movil</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (customers) { %> <% for(var i = 0; i < customers.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= customers[i].rut %></td>
            <td><%= customers[i].name %></td>
            <td><%= customers[i].ap_paterno  %></td>
            <td><%= customers[i].ap_materno %></td>
            <td><%= customers[i].direccion %></td>
            <td><%= customers[i].address %></td>
            <td><%= customers[i].contrasenia %></td>
            <td><%= customers[i].phone %></td>
            <td><%= customers[i].blocked %></td>
            <td><%= customers[i].typeAccount %></td>

           

            <td class="d-flex gap-3">
              <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                Editar
              </a>
              <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                Borrar
              </a>
            </td>
            
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
